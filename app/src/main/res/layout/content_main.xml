<RelativeLayout

    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/TF_location"
        android:layout_width="284dp"
        android:layout_height="45dp"
        android:layout_above="@+id/B_hopistals"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-85dp"
        android:ems="10"
        android:hint="enter the location"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/B_search"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/round"
        android:onClick="onClick"
        android:text="Search"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true" />


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_hopistals"
        android:layout_marginTop="8dp"
        tools:context="com.has.priyanka.mapsdemo.MapsActivity" />

    <Button
        android:id="@+id/B_hopistals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="85dp"
        android:onClick="onClick"
        android:text="Hospitals"
        android:layout_alignParentLeft="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/round"/>

    <Button
        android:id="@+id/B_schools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/B_hopistals"
        android:layout_marginStart="116dp"
        android:onClick="onClick"
        android:text="Clinics"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="116dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round"/>

    <Button
        android:id="@+id/B_restaurants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/B_hopistals"
        android:layout_marginEnd="38dp"
        android:onClick="onClick"
        android:text="Medical Shops"
        android:layout_alignParentRight="true"
        android:layout_marginRight="38dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round"/>




</RelativeLayout>